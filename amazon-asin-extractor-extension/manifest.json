{
  "manifest_version": 3,
  "name": "Amazon ASIN Extractor + Lead Submittal",
  "version": "2.0",
  "description": "Extract Amazon ASINs and auto-fill Lead Submittal page",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://amazon.com/*",
    "https://www.amazon.com/*",
    "http://localhost:*/*",
    "https://*.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://amazon.com/*", "https://www.amazon.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["http://localhost:*/*", "https://*.vercel.app/*"],
      "js": ["frontend-filler.js"],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon ASIN Extractor"
  },
  "background": {
    "service_worker": "background.js"
  }
}